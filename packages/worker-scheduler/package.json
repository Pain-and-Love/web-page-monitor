{
  "name": "@webest/web-page-monitor-worker-scheduler",
  "version": "0.0.0",
  "description": "web page monitor's daemon worker",
  "author": "Daniel Liu <hnnk@qq.com>",
  "homepage": "",
  "license": "See monorepo's LICENSE.md",
  "main": "worker-scheduler.mjs",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "nodemon worker-scheduler.mjs",
    "start": "pm2 start worker-scheduler.mjs --name workerScheduler --cron-restart=\"40 59 0,4,8,12,16,20 * * *\" --exp-backoff-restart-delay=100 --time && pm2 save",
    "stop": "pm2 stop workerScheduler --watch && pm2 delete workerScheduler && pm2 save --force"
  },
  "dependencies": {
    "@webest/web-page-monitor-helper": "*",
    "amqplib": "^0.8.0",
    "crypto-js": "^4.1.1",
    "diff": "^5.0.0",
    "handlebars": "^4.7.7",
    "mongodb": "=4.3.1",
    "mqtt": "^4.3.4",
    "nodemailer": "^6.7.2",
    "socket.io-client": "^4.4.1"
  },
  "devDependencies": {
    "mjml": "^4.12.0",
    "nodemon": "^2.0.15"
  }
}
